{
  "name": "fullstack-sandbox",
  "version": "1.0.0",
  "description": "Just a sandbox for getting into fullstack development",
  "main": "src/app.js",
  "type": "module",
  "config": {
    "entry": "./src/app.js",
    "node_dev": "--trace-sync-io",
    "migration_script": "./drizzle/postgresql-migrate.js",
    "drizzle": "--config ./drizzle/postgresql-drizzle.config.mjs",
    "docker": "--file ./docker/compose.yaml --env-file ./.env"
  },
  "scripts": {
    "start": "docker compose $npm_package_config_docker up --build",
    "start-app": "docker compose $npm_package_config_docker up --build app",
    "start-db": "docker compose $npm_package_config_docker up --build --detach db",
    "stop": "docker compose $npm_package_config_docker down --remove-orphans",
    "clean": "docker compose $npm_package_config_docker down --remove-orphans --volumes && docker image prune",
    "app": "node $npm_package_config_entry",
    "app-dev": "node $npm_package_config_entry $npm_package_config_node_dev",
    "debug": "DEBUG=fullstack-sandbox npm run app-dev",
    "debug-all": "DEBUG=* npm run app-dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src",
    "db-make-migration": "npx drizzle-kit generate:pg $npm_package_config_drizzle",
    "db-drop-migration": "npx drizzle-kit drop $npm_package_config_drizzle",
    "db-migrate": "node $npm_package_config_migration_script",
    "db-studio": "npx drizzle-kit studio $npm_package_config_drizzle"
  },
  "author": "WaterGenie35",
  "license": "ISC",
  "engines": {
    "npm": "10.5.0",
    "node": "v20.12.1"
  },
  "dependencies": {
    "@faker-js/faker": "8.4.1",
    "better-sqlite3": "9.5.0",
    "compression": "1.7.4",
    "debug": "4.3.4",
    "dotenv": "16.4.5",
    "drizzle-orm": "0.30.8",
    "express": "4.19.2",
    "helmet": "7.1.0",
    "postgres": "3.4.4",
    "ulid": "2.3.0"
  },
  "devDependencies": {
    "@eslint/js": "9.0.0",
    "@stylistic/eslint-plugin": "1.7.0",
    "@types/compression": "1.7.5",
    "@types/debug": "4.1.12",
    "@types/eslint__js": "8.42.3",
    "@types/express": "4.17.21",
    "drizzle-kit": "0.21.1",
    "eslint": "8.57.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsdoc": "48.2.3",
    "globals": "15.0.0",
    "http-proxy-middleware": "3.0.0",
    "pg": "8.11.5"
  }
}
